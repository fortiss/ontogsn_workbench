@prefix did:    <http://www.fortiss-demo.org/ontologies/defence-in-depth/> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml:    <http://www.w3.org/XML/1998/namespace> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <https://schema.org/> .
@prefix prov:   <http://www.w3.org/ns/prov#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@base           <http://www.fortiss-demo.org/ontologies/defence-in-depth/> .

<http://www.fortiss-demo.org/ontologies/defence-in-depth>
    a                   owl:Ontology ;
    owl:versionIRI      <http://www.fortiss-demo.org/ontologies/defence-in-depth/1.0> ;
    owl:versionInfo     "1.0.0" ;
    dct:title           "Defence in Depth Ontology"@en ;
    dct:description     "A lightweight ontology describing defence-in-depth layers of an adversarial robustness system and their alignment with NIST CSF Functions."@en ;
    dct:creator         "Tomas Bueno Momcilovic" ;
    dct:license         <https://creativecommons.org/publicdomain/zero/1.0/> ;
    dct:created         "2025-01-01"^^xsd:date ;
    owl:imports         <http://www.w3.org/ns/prov-o#> .

did:covers rdf:type     owl:ObjectProperty ;
           rdfs:label   "covers"@en ;
           rdfs:comment "Indicates that a defence-in-depth layer covers one or more NIST Functions."@en ;
           rdfs:domain  did:Layer ;
           rdfs:range   did:NISTFunction .

did:position rdf:type     owl:DatatypeProperty ;
             rdfs:label   "position index"@en ;
             rdfs:comment "Numerical ordering of layers or NIST functions in the defence-in-depth stack."@en ;
             rdfs:domain  owl:Thing ;
             rdfs:range   xsd:integer .

did:Layer rdf:type              owl:Class ;
          rdfs:label            "Layer"@en ;
          rdfs:comment          "A layer in a defence-in-depth architecture."@en ;
          prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:NISTFunction rdf:type               owl:Class ;
                 rdfs:label             "NIST Function"@en ;
                 rdfs:comment           "A Function from the NIST Cybersecurity Framework (Identify, Protect, Detect, Respond, Recover, Govern)."@en ;
                 prov:hadPrimarySource  <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf>.

did:detect rdf:type owl:NamedIndividual ,
                    did:NISTFunction ;
        did:position "3"^^xsd:integer ;
        schema:identifier "DE"^^xsd:string ;
        rdfs:comment "Possible cybersecurity attacks and compromises are found and analyzed. DETECT enables the timely discovery and analysis of anomalies, indicators of compromise, and other potentially adverse events that may indicate that cybersecurity attacks and incidents are occurring. This Function supports successful incident response and recovery activities."@en ;
        rdfs:label "Detect"@en ;
        prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:downstreamInteractionLayer rdf:type owl:NamedIndividual ,
                                     did:Layer ;
                            did:position "5"^^xsd:integer ;
                            rdfs:label "Downstream Interaction Layer"@en ;
                            prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:govern rdf:type owl:NamedIndividual ,
                 did:NISTFunction ;
        did:position "0"^^xsd:integer ;
        schema:identifier "GV"^^xsd:string ;
        rdfs:comment "The organization’s cybersecurity risk management strategy, expectations, and policy are established, communicated, and monitored. The GOVERN Function provides outcomes to inform what an organization may do to achieve and prioritize the outcomes of the other five Functions in the context of its mission and stakeholder expectations. Governance activities are critical for incorporating cybersecurity into an organization’s broader enterprise risk management (ERM) strategy. GOVERN addresses an understanding of organizational context; the establishment of cybersecurity strategy and cybersecurity supply chain risk management; roles, responsibilities, and authorities; policy; and the oversight of cybersecurity strategy."@en ;
        rdfs:label "Govern"@en ;
        prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:identify rdf:type owl:NamedIndividual ,
                   did:NISTFunction ;
          did:position "1"^^xsd:integer ;
          schema:identifier "ID"^^xsd:string ;
          rdfs:comment "The organization’s current cybersecurity risks are understood. Understanding the organization’s assets (e.g., data, hardware, software, systems, facilities, services, people), suppliers, and related cybersecurity risks enables an organization to prioritize its efforts consistent with its risk management strategy and the mission needs identified under GOVERN. This Function also includes the identification of improvement opportunities for the organization’s policies, plans, processes, procedures, and practices that support cybersecurity risk management to inform efforts under all six Functions."@en ;
          rdfs:label "Identify"@en ;
          prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:incidentFeedbackLayer rdf:type owl:NamedIndividual ,
                                did:Layer ;
                       did:covers did:govern ,
                               did:identify ;
                       did:position "6"^^xsd:integer ;
                       rdfs:label "Incident Feedback Layer"@en ;
                       prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:inputDetectionLayer rdf:type owl:NamedIndividual ,
                              did:Layer ;
                     did:covers did:protect ;
                     did:position "2"^^xsd:integer ;
                     rdfs:label "Input-Based Detection Layer"@en ;
                     prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:modelDetectionLayer rdf:type owl:NamedIndividual ,
                              did:Layer ;
                     did:position "3"^^xsd:integer ;
                     rdfs:label "Model-Based Detection Layer"@en ;
                     prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:outputDetectionLayer rdf:type owl:NamedIndividual ,
                               did:Layer ;
                      did:position "4"^^xsd:integer ;
                      rdfs:label "Output-Based Detection Layer"@en ;
                      prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .

did:protect rdf:type owl:NamedIndividual ,
                  did:NISTFunction ;
         did:position "2"^^xsd:integer ;
         schema:identifier "PR"^^xsd:string ;
         rdfs:comment "Safeguards to manage the organization’s cybersecurity risks are used. Once assets and risks are identified and prioritized, PROTECT supports the ability to secure those assets to prevent or lower the likelihood and impact of adverse cybersecurity events, as well as to increase the likelihood and impact of taking advantage of opportunities. Outcomes covered by this Function include identity management, authentication, and access control; awareness and training; data security; platform security (i.e., securing the hardware, software, and services of physical and virtual platforms); and the resilience of technology infrastructure."@en ;
         rdfs:label "Protect"@en ;
         prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:recover rdf:type owl:NamedIndividual ,
                  did:NISTFunction ;
         did:position "5"^^xsd:integer ;
         schema:identifier "RC"^^xsd:string ;
         rdfs:comment "Assets and operations affected by a cybersecurity incident are restored. RECOVER supports the timely restoration of normal operations to reduce the effects of cybersecurity incidents and enable appropriate communication during recovery efforts."@en ;
         rdfs:label "Recover"@en ;
         prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:respond rdf:type owl:NamedIndividual ,
                  did:NISTFunction ;
         did:position "4"^^xsd:integer ;
         schema:identifier "RS"^^xsd:string ;
         rdfs:comment "Actions regarding a detected cybersecurity incident are taken. RESPOND supports the ability to contain the effects of cybersecurity incidents. Outcomes within this Function cover incident management, analysis, mitigation, reporting, and communication."@en ;
         rdfs:label "Respond"@en ;
         prov:hadPrimarySource <https://nvlpubs.nist.gov/nistpubs/CSWP/NIST.CSWP.29.pdf> .

did:upstreamInteractionLayer rdf:type owl:NamedIndividual ,
                                   did:Layer ;
                          did:covers did:protect ;
                          did:position "1"^^xsd:integer ;
                          rdfs:label "Upstream Interaction Layer"@en ;
                          prov:hadPrimarySource <https://ieeexplore.ieee.org/abstract/document/10771205> .


